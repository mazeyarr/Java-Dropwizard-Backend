<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="mazeyarr">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(250)"></column>
            <column name="firstname" type="varchar(250)"></column>
            <column name="lastname" type="varchar(250)"></column>
            <column name="password" type="varchar(250)"></column>
        </createTable>

        <createTable tableName="user_roles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint"></column>
            <column name="role" type="varchar(250)"></column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="user_id"
                baseTableName="user_roles"
                constraintName="user_role_fk"
                referencedColumnNames="id"
                referencedTableName="users" />

        <!--Seeding Table-->
        <insert tableName="users">
            <column name="username">mazeyar</column>
            <column name="firstname">Mazeyar</column>
            <column name="lastname">Rezaei</column>
            <column name="password">mazeyar123</column>
        </insert>
        <insert tableName="user_roles">
            <column name="user_id">1</column>
            <column name="role">role_admin</column>
        </insert>
    </changeSet>
</databaseChangeLog>